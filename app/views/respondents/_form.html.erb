<%= form_for(respondent) do |f| %>
  <% if respondent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(respondent.errors.count, "error") %> prohibited this respondent from being saved:</h2>

      <ul>
      <% respondent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <% @projects.each do |project| %>
    <%= check_box_tag "respondent[project_ids][]", project.id, respondent.project_ids.include?(project.id) %>
    <%= project.name %>
    <br />
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
