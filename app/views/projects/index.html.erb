<p id="notice"><%= notice %></p>

<h1 class="page-header">Proyectos</h1>

<div class="container">
  <div class="panel-group">
    <div class="panel panel-default" >
      <div class="row">
        <div class="col-md-6">

          <div class="panel-heading">
            <h4><b> <%= link_to 'Crear proyecto', new_project_path %></b></h4>
          </div>
        </div>

        <div class="col-md-6">
          <div class="panel-heading">
            <h4><b> <%= link_to 'Super Admin', rails_admin_path %></b></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Compañia</th>
      <th>Fecha Inicio</th>
      <th>Fecha Termino</th>
      <th>Need</th>
      <th colspan="3"></th>
      <th>Importar datos csv </th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><b> <%= link_to project.name , project %></b></td>
        <td><%= project.company %></td>
        <td><%= project.start %></td>
        <td><%= project.finish %></td>
        <td><%= project.need %></td>
        <td><%= link_to 'Mostrar', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        <td><div>
        <%= form_tag import_respondents_path, multipart: true do %>
          <%= hidden_field_tag :project_id, project.id %>
          <%= file_field_tag :file %>
          <%= submit_tag "Importar Csv" %>
        <% end %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
